<p id="notice"><%= notice %></p>




<div class="card" style="margin-left: 3%; margin-right: 3%;">
  <div class="card-body">
    <h4 class="card-title" style="text-align: center; font-size: 300%;">Users</h4>
    
    <table class="table table-hover table-dark">
      <thead>
        <tr>     
          <th scope="col">Name</th>
          <th scope="col">Lastname</th>
          <th scope="col">Email</th>
          <th scope="col">Password</th>
          <th scope="col">Document</th>
          <th scope="col" ></th>
        </tr>
      </thead>
      <tbody>
        
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.name %></td>
            <td><%= user.lastName %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><%= user.document %></td>
            <td><%= link_to 'Destroy', user, method: :delete,class:'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
            
          </tr>
        
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>


