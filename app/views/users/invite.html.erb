<h1>Invitar a un amigo</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:user, url: 'send_invite') do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <br>
      <%= f.submit "Invitar", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
